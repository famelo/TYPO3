{
  "variables": [
    {
      "name": "baseURL",
      "question": "Please specify a BaseURL",
      "default": "http://localhost/Templates/TYPO3/"
    }
  ],
  "replacements": [
    {
      "search": "baseURL = http://localhost/Templates/TYPO3/",
      "replace": "baseURL = {{baseURL}}",
      "path": "/^Configuration\\/TypoScript/"
    },
    {
      "search": "typo3conf/ext/template",
      "replace": "typo3conf/ext/{{name}}"
    }
  ],
  "submodules": [
    {
      "module": "famelo/Bootstrap",
      "path": "Resources/Public",
      "variables": {
        "name": "Public"
      }
    }
  ]
}
